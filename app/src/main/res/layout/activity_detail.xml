<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:layout_marginHorizontal="8dp"
            android:paddingTop="100dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="8dp"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/lorem"
                    android:maxLines="1"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_account_circle_24" />

                <TextView
                    android:id="@+id/tv_follower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_people_24" />

                <TextView
                    android:id="@+id/tv_following"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_follower_circle_24" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_apartment_24" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/tv_repository"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="@tools:sample/lorem"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/ic_baseline_card_travel_24" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp">
                    <Button
                        android:id="@+id/btn_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/link_user"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_centerHorizontal="true"
                        style="?android:attr/buttonBarNeutralButtonStyle"
                        app:icon="@drawable/ic_baseline_link_24" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dimen_avatar"
            android:layout_height="@dimen/dimen_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            android:padding="8dp"
            app:civ_border_color="?attr/colorOnBackground"
            app:civ_border_width="1dp"
            tools:src="@tools:sample/avatars" />
    </RelativeLayout>
</ScrollView>